<Window x:Class="SOPokemonUI.Views.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SOPokemonUI.Views"
        mc:Ignorable="d"
        Title="ShellView" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="20" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--Row 0-->
        <Menu Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="8">
            <MenuItem Header="_Datei">
                <MenuItem Header="_Beenden" x:Name="Exit" />
            </MenuItem>
            <MenuItem Header="_Einstellungen">

            </MenuItem>
        </Menu>

        <!--Row 2-->
        <TextBox Grid.Row="2" Grid.Column="1" Text="Suche..." Margin="0 0 0 5"/>

        <!--Row 3-->
        <ListView x:Name="PokeList" Grid.Row="3" Grid.Column="1" Grid.RowSpan="2" Width="150" MinHeight="50"
                  SelectedItem="{Binding Path=SelectedPokemon, Mode=OneWayToSource}" DisplayMemberPath="PokeName"
                  MaxHeight="300"></ListView>
        <Image x:Name="PokeImage" Grid.Row="3" Grid.Column="2" Grid.ColumnSpan="3" MinWidth="150" MinHeight="150" Margin="20 0 20 0" />

        <!--Row 4-->
        <TextBlock x:Name="PokemonWeight" Grid.Row="4" Grid.Column="2" Margin="20 5 20 0"/>

    </Grid>
</Window>
